<% content_for :header_right do %>
  <a href="#" class="btn">Preview this template</a>
  <a href="#" class="btn save-button">Save</a>
<% end %>

<% content_for :page_title do %>
  <i class="ico ico-20 ico-20-facebook"></i>
  <a href="/orders" class="breadcrumb">Invoice & Receipt Printer /</a>
  <span><%= @tmpl.name %></span>
<% end %>

<div class="row section description first-section">

  <div class="span6 section-summary">
    <h1>Edit template</h1>
    <p>The template can be customized using html css and liquid. Much like how customizing your store's theme works.</p>
    <p>You can retreive information on this order by inserting variables into your template.</p> 
    <a href="/print_templates/variables" target="_blank" class="plain view-in-store" style="">View the variable list</a>
  </div>

  <div class="span18 section-content">
    <label for="name">Name</label>
    <input name="name" type="text" class="large ssb" value="<%= @tmpl.name %>">

    <div class="ssb">
      <label for="body">Description</label>
      <textarea name="body" class="printer-template-edit-body"><%= @tmpl.body %></textarea>
    </div>
  </div>
</div>

<div class="row section">

  <div class="span6 section-summary">
    <h1>Template settings</h1>
    <p>Templates can shown by default when you open an order.</p>
  </div>

  <div class="span18 section-content">

<!-- Need to incorperate <%= @tmpl.default %> into the checkbox -->

    <div>
      <input name="show" type="checkbox" value="<%= @tmpl.default %>">
      <label class="inline" for="show">Show this template by default</label>
    </div>
    
  </div>
</div>

<div class="row section buttons">
  <a class="fl btn destroy" data-modal=".modal-testmodal" href="#">Delete this template</a>
  <input type="submit" class="btn " data-addclass-primary="product.isDirty" value="Save">
</div>

<% content_for :modals do %>
  <div class="modal-bg hidden modal-testmodal">
    <div class="modal">
      <header>
        <h2>Delete this template?</h2>
        <a href="#" class="close-modal">Ã—</a>
      </header>
      <div class="body">
        <p>Are you sure you want to delete this template? This action cannot be reversed.</p>
      </div>
      <div class="buttons">
        <a class="btn close-modal" href="#">Cancel</a>
        <a class="btn primary close-modal" href="#">Delete</a>
      </div>
    </div>
  </div>
<% end %>
<% content_for :page_title do %>
  <a href="/orders"><i class="ico ico-20 app-icon"></i></a>
  <a href="/orders" class="breadcrumb">Invoice & Receipt Printer</a>
  <span class="breadcrumb">/</span>
  <span>Variable list</span>
<% end %>

<div class="row section">

  <div class="span6 section-summary">
    <h1>General variables</h1>
    <p>All of the general variables related to the order.</p>
  </div>

  <div class="span18 section-content">

    <div class="variable-reference-table">      
      <table>
        <thead>
          <tr>
            <th>Variable discription</th>
            <th>Variable name</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>Shop name</td>
            <td><pre>{{shop_name}}</pre></td>
          </tr>

          <tr>
            <td>Order name</td>
            <td><pre>{{order_name}}</pre></td>
          </tr>

          <tr>
            <td>Order name <span class="note">(different variable, same content)</span></td>
            <td><pre>{{name}}</pre></td>
          </tr>

          <tr>
            <td>Order number</td>
            <td><pre>{{order_number}}</pre></td>
          </tr>

          <tr>
            <td>Gateway used</td>
            <td><pre>{{ gateway }}</pre></td>
          </tr>

          <tr>
            <td>Shipping method</td>
            <td><pre>{{ shipping_method.title }}</pre></td>
          </tr>

          <tr>
            <td>Subtotal price</td>
            <td><pre>{{ subtotal_price | money }}</pre></td>
          </tr>

          <tr>
            <td>Tax prices</td>
            <td><pre>{{ tax_price | money }}</pre></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row section">

  <div class="span6 section-summary">
    <h1>Tax lines</h1>
    <p>The taxes for the order.</p>
  </div>

  <div class="span18 section-content">

    <div class="variable-reference-table">

      <table>
        <thead>
          <tr>
            <th>Variable discription</th>
            <th>Variable name</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>Tax opening tag ???</td>
            <td><pre>{% for tax_line in tax_lines %}</pre></td>
          </tr>

          <tr>
            <td>Price</td>
            <td><pre>{{ tax_line.price | money }}</pre></td>
          </tr>

          <tr>
            <td>Rate</td>
            <td><pre>{{ tax_line.rate }}</pre></td>
          </tr>

          <tr>
            <td>Title</td>
            <td><pre>{{ tax_line.title }}</pre></td>
          </tr>

          <tr>
            <td>Tax opening end tag ???</td>
            <td><pre>{% endfor %}</pre></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row section">

  <div class="span6 section-summary">
    <h1>Order details</h1>
    <p>The order's details.</p>
  </div>

  <div class="span18 section-content">

    <div class="variable-reference-table">
      <table>
        <thead>
          <tr>
            <th>Variable discription</th>
            <th>Variable name</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>Shipping price</td>
            <td><pre>{{ shipping_price | money }}</pre></td>
          </tr>

          <tr>
            <td>Total price</td>
            <td><pre>{{ total_price | money }}</pre></td>
          </tr>

          <tr>
            <td>Note</td>
            <td><pre>{{ note }}</pre></td>
          </tr>

          <tr>
            <td>Attributes</td>
            <td><pre>{{ customer.name }} - {{ customer.email }}</pre></td>
          </tr>

          <tr>
            <td>Customer Email</td>
            <td><pre>{{ email }} <span class="note">(different variable, same content)</span></pre></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

